<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/firstNameTextViewRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="first name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lastNameTextViewRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="last name"
        app:layout_constraintBaseline_toBaselineOf="@+id/firstNameTextViewRow"
        app:layout_constraintStart_toEndOf="@+id/firstNameTextViewRow" />

    <TextView
        android:id="@+id/dobTextViewRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="date of birth"
        app:layout_constraintBaseline_toBaselineOf="@+id/lastNameTextViewRow"
        app:layout_constraintStart_toEndOf="@+id/lastNameTextViewRow" />
</androidx.constraintlayout.widget.ConstraintLayout>